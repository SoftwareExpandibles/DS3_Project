@using Models
@{
    var myList = ViewBag.View;
    var db = myList;
    var data = db;
    List<string> days = new List<string>();
    List<string> orders = new List<string>();
    foreach (DailyOrderCounters item in db)
    {
        days.Add(item.DatedRecord.ToString());
        orders.Add(item.OrdersInADay.ToString());
    }
    var myChart = new Chart(width: 600, height: 400, theme: ChartTheme.Green)
        .AddTitle("Number of Orders in a day")
        .AddLegend(title: "OrdersInADay", name: "Vertical")
        .DataBindCrossTable(dataSource: data, groupByField: "OrdersInADay", xField: "DatedRecord", yFields: "OrdersInADay")
        .Write();
}
