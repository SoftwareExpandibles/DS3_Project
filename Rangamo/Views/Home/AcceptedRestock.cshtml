@using Models
@{ 
    var myList = ViewBag.View;
    var db = myList;
    var data = db;
    List<string> days = new List<string>();
    List<string> orders = new List<string>();
    foreach (DailyReOrderCounters item in db)
    {
        days.Add(item.DatedReStock.ToString());
        orders.Add(item.RestocksInADay.ToString());
    }
    var myChart = new Chart(width: 600, height: 400, theme: ChartTheme.Green)
        .AddTitle("Number of ReOrdered Stock Items")
        .AddLegend(title: "ReOrdered Stock", name: "Vertical")
        .DataBindCrossTable(dataSource: data, groupByField: "RestocksInADay", xField: "DatedReStock", yFields: "RestocksInADay")
        .Write();
}
