@model Models.Product
@using Models;

@{
    ViewBag.Title = "Cart";
}


<h2 style="text-align:center">Your Cart</h2>


<table class="table">
    <tr>
        <th>
            Optional
        </th>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Colour
        </th>
        <th>
            Size
        </th>
        <th>
            Photo
        </th>
        <th>
            Price
        </th>
        <th>
            Quantity
        </th>
        <th>
            Subtotal
        </th>
    </tr>

    @if (Session.Count > -1)
    {
        double s = 0;
        try
        {
            foreach (Item item in (List<Item>)Session["cart"])
            {
                s += (Convert.ToDouble(item.Product.Price)) * (Convert.ToDouble(item.Quantity));
                <tr>
                    <td>@Html.ActionLink("Remove Item", "Delete", "Cart", new { id = item.Product.productId }, null)</td>
                    <td>@item.ItemId</td>
                    <td>@item.Product.Title</td>
                    <td>@item.Product.Color</td>
                    <td>@item.Product.Size.ActualSize</td>
                    <td>
                        <img src="@Url.Content("~/Content")/Images/@item.Product.Photo"
                             width="120" height="100" class="glyphicon-picture" />
                        <input type="hidden" class="productId" value="@item.Product.productId" />
                    </td>
                    <td>R @item.Product.Price</td>
                    <td>@item.Quantity</td>
                    <td>R @(item.Product.Price * item.Quantity)</td>
                </tr>
            }
        }
        catch (Exception)
        {
            <tr><td><strong>YOUR CART IS EMPTY!</strong> </td></tr>
        }
        <tr>
            <th align="right" colspan="5">Sum</th>
            <td>R @s</td>
        </tr>
    }
    <tr>
        <td>
            @if (Session.Count == -1)
            {
                @Html.Display(Session["cart"].ToString());
            }
        </td>
    </tr>
</table>
<p style="text-align:center">
    @Html.ActionLink("Continue Shopping", "Index", "Home")
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    @Html.ActionLink("Check Out", "CheckOut", "Cart")
</p>